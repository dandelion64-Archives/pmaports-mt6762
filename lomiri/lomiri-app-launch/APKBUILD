arch="all"
url="https://gitlab.com/ubports/development/core/lomiri-app-launch"
license="GPL-3.0"
depends_dev="gobject-introspection-dev lttng-ust-dev json-glib-dev zeitgeist-dev lomiri-api-dev curl-dev properties-cpp-dev"
makedepends="$depends_dev cmake cmake-extras dbus-test-runner qt5-qtdeclarative gtest-dev glib-dev mir-dev dbus-test-runner-dev click-dev lttng-ust-tools"
checkdepends="gtest-dev gmock py3-dbusmock"
source="
	https://gitlab.com/ubports/development/core/lomiri-app-launch/-/archive/$_commit/lomiri-app-launch-$_commit.tar.gz
	"
subpackages="$pkgname-dev"
builddir="$srcdir/$pkgname-$_commit"
# 23% tests passed, 10 tests failed out of 13
options="!check"

build() {
	cmake -B build \
		-DCMAKE_BUILD_TYPE=None \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DUSE_SYSTEMD=OFF \
		-DLOMIRI_APP_LAUNCH_ARCH=foobar # TODO the code behind this is quite wrong for non-Ubuntu
	make -C build
}

check() {
	cd build
	CTEST_OUTPUT_ON_FAILURE=TRUE ctest
}

package() {
	make -C build DESTDIR="$pkgdir" install
}

