# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: Luca Weiss <luca@z3ntu.xyz>
pkgname=libusermetrics
pkgver=0_git20220927
_commit="db6d9837fa7da7a4fbaf2f93730fda8743e3ba24"
pkgrel=0
pkgdesc='Library for exporting anonymous metrics about users'
arch="all"
url="https://gitlab.com/ubports/development/core/libusermetrics"
license="GPL-3.0 LGPL-3.0 LGPL-2.1"
depends_dev="
	click-dev
	gsettings-qt-dev
	libapparmor-dev
	qdjango-dev
	qt5-qtdeclarative-dev
	qt5-qtxmlpatterns-dev
	"
makedepends="
	$depends_dev
	cmake-extras
	gmock
	gtest-dev
	intltool
	libapparmor
	libqtdbustest
	qt5-qtbase-dev
	"
checkdepends="dbus"
source="https://gitlab.com/ubports/development/core/libusermetrics/-/archive/$_commit/libusermetrics-$_commit.tar.gz"
subpackages="$pkgname-dev $pkgname-lang"
builddir="$srcdir/$pkgname-$_commit"
options="!check" # Tests fail under QEMU

build() {
	cmake -B build \
		-DCMAKE_BUILD_TYPE=Release \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	make -C build
}

check() {
	cd build
	CTEST_OUTPUT_ON_FAILURE=TRUE ctest
}

package() {
	make -C build DESTDIR="$pkgdir" install
}

sha512sums="
10b92657cbca68430d29a93e15cb991cb0f6e1fd39ca0afb21d619d3764103f87f245bc3149108ebaa2307e91a93c7193fb5f30c0be01a6368152027b8bd87aa  libusermetrics-db6d9837fa7da7a4fbaf2f93730fda8743e3ba24.tar.gz
"
