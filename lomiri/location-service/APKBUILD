# Maintainer: Luca Weiss <luca@z3ntu.xyz>
pkgname=location-service
pkgver=0_git20221216
pkgrel=0
_commit="46bbb1be517a0db273bb4728cf778e40083318bb"
pkgdesc="Location service aggregating position/velocity/heading updates and exporting them over dbus"
arch="all"
url="https://gitlab.com/ubports/development/core/location-service"
license="GPL-3.0 LGPL-3.0"
depends_dev="
	boost-dev
	dbus-dev
	gflags-dev
	glog-dev
	json-c-dev
	libapparmor-dev
	net-cpp-dev
	process-cpp-dev
	properties-cpp-dev
	qt5-qtbase-dev
	qt5-qtlocation-dev
	trust-store-dev
	"
makedepends="$depends_dev
	cmake-extras
	dbus-cpp-dev
	gettext
	gmock
	gtest-dev
	"
checkdepends="coreutils"
source="
	https://gitlab.com/ubports/development/core/location-service/-/archive/$_commit/location-service-$_commit.tar.gz
	"
subpackages="$pkgname-dev $pkgname-doc $pkgname-lang"
builddir="$srcdir/$pkgname-$_commit"
options="!check" # Several failures

build() {
	cmake -B build \
		-DCMAKE_BUILD_TYPE=Release \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DLOCATION_SERVICE_ENABLE_GPS_PROVIDER=OFF
	cmake --build build
}

check() {
	cd build
	CTEST_OUTPUT_ON_FAILURE=TRUE ctest
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
f4ee13e5481625be81bf20c3890eee99c2e86b67888e9f03a0e477007d985fe6417f0ab6950d5cbca9ffbde22cd4193e56220743be3aa5a2c0ab5ff390c61ba1  location-service-46bbb1be517a0db273bb4728cf778e40083318bb.tar.gz
"
